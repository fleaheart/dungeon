{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "incremental": true,
        "strict": true,
        "alwaysStrict": true, // strict
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true, // strict
        "noImplicitReturns": true,
        "noImplicitThis": true, // strict
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictFunctionTypes": true, // strict
        "strictNullChecks": true, // strict
        "strictPropertyInitialization": true // strict
    }
}